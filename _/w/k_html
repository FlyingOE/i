function apl(s){var a="⍴⍳×÷⌈⌊⌽⍋⍒⍉←⋄¨".split(""); var k="#!*%|&|<>+:;'".split(""); return s.split("").map(x=>{var i=a.indexOf(x); return (i==-1)?x:k[i]}).join("")}
