# kov: k test coverage
#
# install:
#  sh
# use:
#  kov file.k test.t -e
#  see cov.html
set -e
set -x

rm -f *.go
if [ $1 == "clean" ]; then exit; fi

# copy source files, replace //kov: comments with code
for file in ../*.go; do
 f=`echo $file|sed 's/...//'`
 cat $file | sed 's,//kov:,,' >$f
done

cp kov_go kov.go
go install

